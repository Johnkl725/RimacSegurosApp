@{
    ViewData["Title"] = "CreateUsuario";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h1 class="text-center">Crear Usuario</h1>
<h4 class="text-center">Usuario</h4>
<hr />
<div class="d-flex justify-content-center">
    <div class="login-container col-md-8">
        <form asp-action="CreateUsuario" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="Nombres" class="control-label">Nombres</label>
                    <input type="text" id="Nombres" name="Nombres" class="form-control" />
                    <span class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label for="Apellido1" class="control-label">Apellido Paterno</label>
                    <input type="text" id="Apellido1" name="Apellido1" class="form-control" />
                    <span class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label for="Apellido2" class="control-label">Apellido Materno</label>
                    <input type="text" id="Apellido2" name="Apellido2" class="form-control" />
                    <span class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label for="Dni" class="control-label">DNI</label>
                    <input type="text" id="Dni" name="Dni" class="form-control" />
                    <span class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label for="Telefono" class="control-label">Teléfono</label>
                    <input type="text" id="Telefono" name="Telefono" class="form-control" />
                    <span class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label for="Contraseña">Contraseña</label>
                    <input type="password" id="Contraseña" name="Contraseña" class="form-control" />
                    <span class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Crear Usuario" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="PersonalDashboard" asp-controller="Personal" class="btn btn-outline-secondary btn-sm">Volver al Dashboard</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .login-container {
        background: rgba(255, 255, 255, 0.8);
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .form-row {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }

    .form-group {
        flex: 0 0 48%;
        margin-bottom: 15px;
    }

    .btn-block {
        width: 100%;
    }

    .text-center {
        text-align: center;
    }
</style>

@using EntidadesProyecto
@model IEnumerable<Usuario>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Incluye Font Awesome CDN en el encabezado si aún no lo has hecho -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOMGZbF2J6MRR7/EhXI8dYgZaWl3IJ2ZmWpwi1J9" crossorigin="anonymous">

<div class="container mt-5">
    <div class="row">
        <div class="col">
            <h2 class="text-primary mb-4"><i class="fas fa-users me-2"></i>Mantener Usuarios</h2>

            <!-- Botón para agregar un nuevo beneficiario -->
            <div class="d-flex justify-content-end mb-3">
                <a href="@Url.Action("CreateUsuario", "Personal")" class="btn btn-primary">
                    <i class="fas fa-user-plus me-2"></i>Agregar Beneficiario
                </a>
            </div>

            <!-- Tabla de beneficiarios -->
            <div class="table-responsive">
                <table class="table table-hover table-bordered align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col"><i class="fas fa-id-badge"></i> ID</th>
                            <th scope="col"><i class="fas fa-user"></i> Nombres</th>
                            <th scope="col"><i class="fas fa-user-tag"></i> Apellido Paterno</th>
                            <th scope="col"><i class="fas fa-user-tag"></i> Apellido Materno</th>
                            <th scope="col"><i class="fas fa-id-card"></i> DNI</th>
                            <th scope="col"><i class="fas fa-phone"></i> Teléfono</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var beneficiario in Model)
                        {
                            <tr>
                                <td>@beneficiario.Id</td>
                                <td>@beneficiario.Nombres</td>
                                <td>@beneficiario.Apellido1</td>
                                <td>@beneficiario.Apellido2</td>
                                <td>@beneficiario.Dni</td>
                                <td>@beneficiario.Telefono</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Botón de regreso al Dashboard -->
            <div class="text-center mt-3">
                <a asp-action="PersonalDashboard" asp-controller="Personal" class="btn btn-outline-secondary btn-sm">
                    <i class="fas fa-arrow-left me-2"></i>Volver al Dashboard
                </a>
            </div>
        </div>
    </div>
</div>

@model EntidadesProyecto.Proveedor

<h2>Editar Proveedor</h2>

<form asp-action="Editar" method="post" class="mt-4">
    @Html.AntiForgeryToken()

    <div class="form-group mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Ruc" class="form-label"></label>
        <input asp-for="Ruc" class="form-control" />
        <span asp-validation-for="Ruc" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Telefono" class="form-label"></label>
        <input asp-for="Telefono" class="form-control" />
        <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Correo" class="form-label"></label>
        <input asp-for="Correo" class="form-control" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Calificacion" class="form-label"></label>
        <select asp-for="Calificacion" class="form-control">
            <option value="">Seleccione una calificación</option>
            <option value="A">A</option>
            <option value="B">B</option>
            <option value="C">C</option>
            <option value="D">D</option>
        </select>
        <span asp-validation-for="Calificacion" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Descripcion" class="form-label"></label>
        <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a href="/Personal/proveedor/ProveedoresYTalleres" class="btn btn-secondary">Cancelar</a>

</form>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

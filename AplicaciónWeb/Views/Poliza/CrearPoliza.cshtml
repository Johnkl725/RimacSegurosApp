@{
    ViewData["Title"] = "Crear Póliza";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h2 class="text-danger">Crear Póliza</h2>

<form asp-action="CrearPoliza" method="post">
    <input type="hidden" name="idBeneficiario" value="@ViewBag.IdBeneficiario" />

    <div class="form-group">
        <label for="idTipoPoliza" class="text-danger">Tipo de Póliza</label>
        <select id="idTipoPoliza" name="idTipoPoliza" class="form-control border-danger" required>
            <option value="">Seleccione un tipo de póliza</option>
            @foreach (var tipo in (IEnumerable<EntidadesProyecto.TipoPoliza>)ViewBag.TiposPoliza)
            {
                <option value="@tipo.Id">@tipo.Descripcion - @tipo.MontoMensual.ToString("C", new System.Globalization.CultureInfo("es-PE"))</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="fechaInicio" class="text-danger">Fecha de Inicio</label>
        <input type="date" id="fechaInicio" name="fechaInicio" class="form-control border-danger" required />
    </div>

    <div class="form-group">
        <label for="fechaFin" class="text-danger">Fecha de Fin</label>
        <input type="date" id="fechaFin" name="fechaFin" class="form-control border-danger" required />
    </div>

    <div class="form-group">
        <label for="estado" class="text-danger">Estado</label>
        <input type="text" id="estado" name="estado" class="form-control border-danger" required placeholder="Estado de la póliza" />
    </div>

    <button type="submit" class="btn btn-danger">Crear Póliza</button>
</form>

<style>
    .text-danger {
        color: #b71c1c !important;
    }

    .border-danger {
        border-color: #b71c1c !important;
    }

    .btn-danger {
        background-color: #b71c1c;
        border-color: #b71c1c;
    }
</style>

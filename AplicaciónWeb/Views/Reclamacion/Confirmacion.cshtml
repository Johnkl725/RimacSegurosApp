<div class="container mt-5 p-4 shadow-sm" style="background-color: #f8d7da; border-radius: 12px;">
    <h2 class="text-danger text-center font-weight-bold">@ViewBag.Message</h2>
    <p class="text-muted text-center mt-3">¿Qué desea hacer a continuación?</p>

    <div class="d-flex justify-content-center gap-3 mt-4">
        <a href="@Url.Action("IngresarReclamacion", "Reclamacion")" class="btn btn-outline-danger btn-lg px-4">
            <i class="bi bi-pencil-square"></i> Registrar otra reclamación
        </a>
        <a href="@Url.Action("BeneficiarioDashboard", "Beneficiario")" class="btn btn-danger btn-lg px-4">
            <i class="bi bi-house-door"></i> Volver al Dashboard
        </a>
    </div>
</div>

<style>
    .container {
        max-width: 700px;
    }

    h2 {
        font-size: 2rem;
        font-weight: bold;
    }

    .btn-lg {
        font-size: 1.2rem;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .btn-outline-danger {
        color: #dc3545;
        border-color: #dc3545;
        background-color: transparent;
    }

        .btn-outline-danger:hover {
            background-color: #dc3545;
            color: #fff;
        }

    .btn-danger {
        background-color: #dc3545;
        color: #fff;
    }

        .btn-danger:hover {
            background-color: #b02a37;
            color: #fff;
        }

    .shadow-sm {
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
    }

    .gap-3 {
        gap: 1.5rem;
    }
</style>

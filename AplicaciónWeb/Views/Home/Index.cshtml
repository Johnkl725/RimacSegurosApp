@{
    ViewData["Title"] = "Página Principal";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AplicaciónWeb</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AplicaciónWeb.styles.css" asp-append-version="true" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- FontAwesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f9f9f9;
        }

        .navbar {
            background-color: #b71c1c;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
            color: #fff !important;
        }

        .nav-link {
            color: #ffffff !important;
            margin-left: 10px;
        }

            .nav-link:hover {
                text-decoration: underline;
            }

        .welcome-section {
            background: linear-gradient(135deg, #ff8a80, #ff5252);
            color: white;
            padding: 40px;
            border-radius: 10px;
            margin-top: 20px;
            text-align: center;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        }

            .welcome-section h1 {
                font-size: 2.5rem;
                margin-bottom: 10px;
            }

            .welcome-section p {
                font-size: 1.2rem;
            }

        .dashboard {
            margin-top: 30px;
        }

        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 6px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            background: linear-gradient(135deg, #ffffff, #f1f1f1);
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
            }

        .card-header {
            font-weight: bold;
            text-transform: uppercase;
            background: linear-gradient(135deg, #ff6f61, #b71c1c);
            color: white;
            text-align: center;
        }

        .card-body img {
            width: 50px;
            height: 50px;
            margin-bottom: 10px;
        }

        .footer {
            background-color: #b71c1c;
            color: #ffffff;
            padding: 20px;
            text-align: center;
            margin-top: 40px;
        }

            .footer a {
                color: #ff8a80;
                text-decoration: none;
            }

                .footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="#">Rimac Seguros</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Servicios</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contacto</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="welcome-section">
            <h1>¡Bienvenido a Rimac Seguros!</h1>
            <p id="current-time"></p>
        </div>

        <div class="dashboard">
            <div class="row">
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header">Usuarios Totales</div>
                        <div class="card-body text-center">
                            <img src="https://cdn-icons-png.flaticon.com/512/5087/5087579.png" alt="Usuarios">
                            <h3>@Model.UsuariosTotales</h3>
                            <p>Total de usuarios en el sistema.</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header">Beneficiarios Totales</div>
                        <div class="card-body text-center">
                            <img src="https://cdn-icons-png.flaticon.com/512/3893/3893170.png" alt="Beneficiarios">
                            <h3>@Model.BeneficiariosTotales</h3>
                            <p>Número total de beneficiarios registrados.</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header">Personal Total</div>
                        <div class="card-body text-center">
                            <img src="https://img.icons8.com/fluency/48/staff.png" alt="Personal">
                            <h3>@Model.PersonalTotal</h3>
                            <p>Total de personal en el sistema.</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header">Administradores Totales</div>
                        <div class="card-body text-center">
                            <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png" alt="Administradores"> <!-- Administradores Totales -->
                            <h3>@Model.AdministradoresTotales</h3>
                            <p>Cantidad de administradores disponibles.</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header">Siniestros Totales</div>
                        <div class="card-body text-center">
                            <img src="https://cdn-icons-png.flaticon.com/512/2179/2179458.png" alt="Siniestros"> <!-- Siniestros Totales -->


                            <h3>@Model.SiniestrosTotales</h3>
                            <p>Cantidad de siniestros registrados.</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header">Vehículos Totales</div>
                        <div class="card-body text-center">
                            <img src="https://img.icons8.com/fluency/48/car.png" alt="Vehículos">
                            <h3>@Model.VehiculosTotales</h3>
                            <p>Cantidad de vehículos registrados.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="footer">
        <p>&copy; 2024 Rimac Seguros. Todos los derechos reservados. <a href="#">Política de Privacidad</a></p>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        function updateTime() {
            const now = new Date();
            const options = { hour: '2-digit', minute: '2-digit', second: '2-digit', hour12: true };
            document.getElementById('current-time').innerText = `Hora actual: ${now.toLocaleTimeString('es-ES', options)}`;
        }

        setInterval(updateTime, 1000);
        updateTime();
    </script>
</body>
</html>

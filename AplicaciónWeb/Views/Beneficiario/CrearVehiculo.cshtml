@model EntidadesProyecto.Vehiculo
@{
    ViewData["Title"] = "Crear Vehículo";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h1 class="text-center text-danger">Registrar Vehículo</h1>
<hr />

<div class="container">
    <div class="d-flex justify-content-center">
        <div class="login-container col-md-8">
            <form asp-action="CrearVehiculo" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="form-row">
                    <!-- Placa -->
                    <div class="form-group col-md-6">
                        <label asp-for="Placa" class="control-label text-danger">Placa del vehículo</label>
                        <input asp-for="Placa" class="form-control border-danger" placeholder="Ejemplo: ABC123" />
                        <span asp-validation-for="Placa" class="text-danger"></span>
                    </div>

                    <!-- Marca -->
                    <div class="form-group col-md-6">
                        <label asp-for="Marca" class="control-label text-danger">Marca</label>
                        <input asp-for="Marca" class="form-control border-danger" placeholder="Ejemplo: Toyota" />
                        <span asp-validation-for="Marca" class="text-danger"></span>
                    </div>

                    <!-- Modelo -->
                    <div class="form-group col-md-6">
                        <label asp-for="Modelo" class="control-label text-danger">Modelo</label>
                        <input asp-for="Modelo" class="form-control border-danger" placeholder="Ejemplo: 2020" />
                        <span asp-validation-for="Modelo" class="text-danger"></span>
                    </div>

                    <!-- Tipo -->
                    <div class="form-group col-md-6">
                        <label asp-for="Tipo" class="control-label text-danger">Tipo de vehículo</label>
                        <input asp-for="Tipo" class="form-control border-danger" placeholder="Ejemplo: Sedan" />
                        <span asp-validation-for="Tipo" class="text-danger"></span>
                    </div>

                    <!-- Tarjeta Vehicular -->
                    <div class="form-group col-md-6">
                        <label asp-for="TarjetaVehiculo" class="control-label text-danger">Número de tarjeta vehicular</label>
                        <input asp-for="TarjetaVehiculo" class="form-control border-danger" placeholder="Ejemplo: 123456789" />
                        <span asp-validation-for="TarjetaVehiculo" class="text-danger"></span>
                    </div>
                </div>

                <!-- Botón de Submit -->
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-danger btn-lg">Registrar Vehículo</button>
                </div>

                <div class="text-center mt-3">
                    <a asp-action="PersonalDashboard" asp-controller="Personal" class="btn btn-outline-danger btn-sm">Volver al Dashboard</a>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .login-container {
        background: rgba(255, 255, 255, 0.8);
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .form-row {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }

    .form-group {
        flex: 0 0 48%;
        margin-bottom: 15px;
    }

    .btn-block {
        width: 100%;
    }

    .text-danger {
        color: #b71c1c !important;
    }

    .border-danger {
        border-color: #b71c1c !important;
    }

    .btn-danger {
        background-color: #b71c1c;
        border-color: #b71c1c;
    }

    .btn-outline-danger {
        color: #b71c1c;
        border-color: #b71c1c;
    }

        .btn-outline-danger:hover {
            background-color: #b71c1c;
            color: #fff;
        }
</style>

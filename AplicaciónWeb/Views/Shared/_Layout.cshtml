<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AplicaciónWeb</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AplicaciónWeb.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f9f9f9;
        }

        .navbar {
            background-color: #b71c1c;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
            color: #fff !important;
        }

        .nav-link {
            color: #ffffff !important;
            margin-left: 10px;
        }

            .nav-link:hover {
                text-decoration: underline;
            }

        .footer {
            background-color: #b71c1c;
            color: #ffffff;
            padding: 10px;
            text-align: center;
            margin-top: 20px;
            font-size: 0.9rem;
            line-height: 1.4;
        }

            .footer a {
                color: #ff8a80;
                text-decoration: none;
            }

                .footer a:hover {
                    text-decoration: underline;
                }

        /* Sidebar Styles */
        .sidebar {
            background-color: #b71c1c;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            width: 200px;
            z-index: 1000;
            color: #fff;
        }

            .sidebar .nav {
                padding-top: 15px;
            }

            .sidebar .nav-link {
                color: #ffffff;
                padding: 10px 15px;
                display: block;
                text-decoration: none;
                font-size: 1rem;
                transition: background-color 0.3s ease;
            }

                .sidebar .nav-link:hover {
                    background-color: #a11414;
                    color: #ffffff;
                    text-decoration: none;
                }

                .sidebar .nav-link.active {
                    background-color: #8e0c0c;
                    font-weight: bold;
                }

        /* Main Content Styles */
        .container-fluid {
            margin-top: 10px; /* Ajusta el margen superior para el espacio debajo del navbar */
        }
    </style>


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AplicaciónWeb</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy"><i class="fas fa-user-shield"></i> Privacy</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" id="btnVerPerfil" href="#" onclick="mostrarPerfil(); return false;">
                                    <i class="fas fa-user"></i> Ver Perfil
                                </a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <form asp-controller="Login" asp-action="Logout" method="post" class="nav-item">
                                <button type="submit" class="nav-link btn btn-link" style="color: inherit; text-decoration: none;">
                                    <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
                                </button>
                            </form>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Login" asp-action="Index"><i class="fas fa-sign-in-alt"></i> Iniciar Sesión</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <div class="row">
            @if (IsSectionDefined("Sidebar"))
            {
                <aside class="col-2">
                    @RenderSection("Sidebar", required: false)
                </aside>
            }
            <div class="@((IsSectionDefined("Sidebar") ? "col-10" : "col-12"))">
                @RenderSection("BodyContent", required: false)
                @RenderBody()
            </div>
        </div>
    </div>

    <footer class="footer">
        <p>&copy; 2024 Rimac Seguros. Todos los derechos reservados. <a href="#">Política de Privacidad</a></p>
    </footer>

    <script>
        function mostrarPerfil() {
            $.get('@Url.Action("_PerfilPartial", "Login")', function (data) {
                $("#perfilContent").html(data); // Inserta el contenido en el modal
                $('#perfilModal').modal('show'); // Muestra el modal
            }).fail(function () {
                console.error("Error al cargar el perfil."); // Manejo de errores
            });
        }

        function hidePerfil() {
            $('#perfilModal').modal('hide'); // Oculta el modal
        }

        function updateTime() {
            const now = new Date();
            const options = { hour: '2-digit', minute: '2-digit', second: '2-digit', hour12: true };
            document.getElementById('current-time').innerText = `Hora actual: ${now.toLocaleTimeString('es-ES', options)}`;
        }

        setInterval(updateTime, 1000);
        updateTime();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@model IEnumerable<EntidadesProyecto.Taller>

<h2>Lista de Talleres</h2>
<a asp-action="Crear" class="btn btn-primary">Agregar Taller</a>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Dirección</th>
            <th>Ciudad</th>
            <th>Capacidad</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var taller in Model)
        {
            <tr>
                <td>@taller.Nombre</td>
                <td>@taller.Direccion</td>
                <td>@taller.Ciudad</td>
                <td>@taller.Capacidad</td>
                <td>
                    <a asp-action="Detalle" asp-route-id="@taller.Id" class="btn btn-info">Ver</a>
                    <a asp-action="Editar" asp-route-id="@taller.Id" class="btn btn-warning">Editar</a>
                    <form asp-action="Eliminar" asp-route-id="@taller.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('¿Está seguro de eliminar este taller?');">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

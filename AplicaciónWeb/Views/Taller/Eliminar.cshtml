@model EntidadesProyecto.Taller

<h2>Eliminar Taller</h2>

<p>¿Está seguro de que desea eliminar el taller <strong>@Model.Nombre</strong>?</p>

<form asp-action="EliminarConfirmado" method="post">
    @Html.AntiForgeryToken() <!-- Protección contra CSRF -->
    <!-- Campo oculto para enviar el ID del taller -->
    <input type="hidden" asp-for="Id" />

    <div class="mt-3">
        <!-- Botón de eliminación -->
        <button type="submit" class="btn btn-danger">Eliminar</button>

        <!-- Enlace para cancelar -->
        <a href="@Url.Action("Index", "Taller")" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
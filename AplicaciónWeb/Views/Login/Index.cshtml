@{
    ViewData["Title"] = "Login";
}

<!-- Vinculamos los estilos de Bootstrap, Google Fonts y Font Awesome -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

<!-- Estilos personalizados -->
<style>
    body {
        font-family: 'Roboto', sans-serif;
        background: url('https://via.placeholder.com/1500') no-repeat center center fixed;
        background-size: cover;
        height: 100vh;
    }

    .login-container {
        background: rgba(255, 255, 255, 0.9);
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0 6px 10px rgba(0, 0, 0, 0.1);
    }

    .card {
        border-radius: 10px;
        box-shadow: 0 6px 10px rgba(0, 0, 0, 0.1);
        background: linear-gradient(135deg, #ffffff, #f1f1f1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card-header {
        background: linear-gradient(135deg, #ff6f61, #b71c1c);
        color: white;
        text-align: center;
        font-weight: bold;
        font-size: 1.8rem;
    }

    .card-body {
        padding: 30px;
    }

    .btn-block {
        font-size: 1.1rem;
        padding: 10px;
        background-color: #b71c1c;
        border-color: #b71c1c;
        color: #fff;
    }

        .btn-block:hover {
            background-color: #ff6f61;
            border-color: #ff6f61;
        }

    .btn-link {
        font-size: 1rem;
        color: #0d6efd; /* Azul para el enlace */
        text-decoration: none;
    }

        .btn-link:hover {
            text-decoration: underline;
        }

    .footer {
        background-color: #b71c1c;
        color: #ffffff;
        padding: 20px;
        text-align: center;
        position: absolute;
        bottom: 0;
        width: 100%;
    }

        .footer a {
            color: #ff8a80;
            text-decoration: none;
        }

            .footer a:hover {
                text-decoration: underline;
            }
</style>

<div class="container d-flex justify-content-center align-items-center h-100">
    <div class="login-container col-md-6">
        <div class="card">
            <div class="card-header">
                <h3><i class="fas fa-user-lock"></i> Iniciar sesión</h3>
            </div>
            <div class="card-body">
                <form asp-controller="Login" asp-action="Index" method="post">
                    <div class="form-group">
                        <label for="username"><i class="fas fa-id-card"></i> DNI</label>
                        <input type="text" class="form-control" id="username" name="username" placeholder="Ingresa tu DNI" required>
                    </div>
                    <div class="form-group">
                        <label for="password"><i class="fas fa-lock"></i> Contraseña</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Ingrese su contraseña" required>
                    </div>
                    <button type="submit" class="btn btn-block"><i class="fas fa-sign-in-alt"></i> Iniciar sesión</button>
                </form>
                <div class="text-center mt-3">
                    <a href="@Url.Action("Index", "Register")" class="btn btn-block" style="background-color: #b71c1c; color: white; border-color: #b71c1c;">
                        <i class="fas fa-user-plus"></i> Registro
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Scripts de Bootstrap -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
